<div class="background-image"></div>
<div class="container">
    <div class="row justify-content-center position">
            <div class="col-5">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row-fluid user-row">
                            <img src="/images/santa-claus.png" class="img-responsive" alt="Conxole Admin" width="150"/>
                            <div class="page-header text-center">
                                <h3><small>{{title}}</small></h3>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <form accept-charset="UTF-8" role="form" class="form-signin" method="POST" action="/attemptLogin">
                            <fieldset>
                                <label class="panel-login">
                                    <div class="login_result"></div>
                                </label>
                                <input class="form-control" placeholder="Username" name="userName" type="text">
                                <input class="form-control" placeholder="Password" name="password" type="password">
                                <a class="bt btn-primary" role="button" href="userRegistration">Sign Up</a>

                                <br/>
                                <input class="btn btn-lg btn-success btn-block" type="submit" id="login" value="Login ">
                            </fieldset>
                        </form>
                    </div>
            </div>
        </div>

    </div>
</div>

